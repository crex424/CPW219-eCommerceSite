@model IEnumerable<Game>

@{
    ViewData["Title"] = "Game Catalog";
}

<h1>Game Catalog</h1>

<p>
    <a asp-action="Create" asp-controller="Games">Create Game</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Game item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-rout-id="@item.GameID">Edit</a>
                <a class="btn btn-secondary" asp-action="Details" asp-rout-id="@item.GameID">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-rout-id="@item.GameID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
